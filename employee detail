#include<stdio.h>
/*structure declaration*/
struct employee
{
char empname[30];
char departmentname[30];
float salary;
};
int main()
{
struct employee emp;
printf("\n enter details:\n");
printf("name ?:');
gets(emp.name);
printf("department name ?:");
scanf("%d",&emp.departmentname);
printf("salary ?:");
scanf("%f",&emp.salary);
printf("\n entered details is:");
printf("name:%s",emp.name);
printf("departmentname:%s",emp.departmentname);
printf("salary:%f\n",emp.salary);
return 0;
}

